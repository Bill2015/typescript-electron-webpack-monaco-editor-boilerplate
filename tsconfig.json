{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_js/*": ["js/*"],
      "_main/*": ["src/main/*"],
      "_models/*": ["src/models/*"],
      "_test/*": ["src/test/*"],
      "_renderer/*": ["src/renderer/*"],
      "_utils/*": ["src/utils/*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es2015",
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
